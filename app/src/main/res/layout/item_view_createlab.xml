<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/rectangle_6">

    <TextView
        android:id="@+id/step_count"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Step 1"
        android:padding="4dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:fontFamily="@font/irish_grover"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/play_pause_btn"
        app:layout_constraintEnd_toStartOf="@+id/play_pause_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/play_pause_btn" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/play_pause_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:clickable="true"
        app:borderWidth="0dp"
        app:backgroundTint="@color/the_one"
        app:layout_constraintBottom_toBottomOf="@+id/delete_btn"
        app:layout_constraintEnd_toStartOf="@+id/delete_btn"
        app:layout_constraintHorizontal_bias="0.908"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/delete_btn"
        app:srcCompat="@drawable/ic_baseline_play_circle_filled_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_margin="25dp"
        android:clickable="true"
        app:borderWidth="0dp"
        android:backgroundTint="@color/the_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_delete_24" />

</androidx.constraintlayout.widget.ConstraintLayout>